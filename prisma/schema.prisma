model Chapter {
  id     Int     @unique
  verses Verse[]
}

model Verse {
  id        Int     @unique
  chapterId Int
  verseId   Int     @unique
  Chapter   Chapter @relation(fields: [chapterId], references: [id])
}

model Progress {
  userId  Int @unique
  verseId Int
}
